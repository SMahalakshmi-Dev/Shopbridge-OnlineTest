@model Shopbridge.Models.mvcProductmodel
@{
    ViewBag.Title = "AddOrEdit";
}

<div class="form-body">
    @using (Html.BeginForm("AddOrEdit", "Image", FormMethod.Post, new { enctype = "multipart/form.data" }))
    {
        @Html.HiddenFor(model => model.prodId)

        <div class="form-group">
            @Html.LabelFor(model => model.prodName)
            @Html.EditorFor(model => model.prodName)
            @Html.ValidationMessageFor(model => model.prodName)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.prodDesc)
            @Html.EditorFor(model => model.prodDesc)
            @Html.ValidationMessageFor(model => model.prodDesc)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.prodImage)
            <input type="file" name="ImageFile"  />
        </div>

        <div class="form-group">
            <input type="submit" value="Submit" class="btn button" />
            <input type="reset" value="Reset" class="btn button" />
        </div>

    }
</div>
@section scripts{
    @Scripts.Render("~/bundles/jquery");
    }
